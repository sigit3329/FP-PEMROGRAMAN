<Page x:Class="fp.View.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HistoryPage" Background='White'> 

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="History" Margin="10,20,10,0"
                       FontSize="20" FontWeight="Bold"/>
        <DataGrid x:Name="dgKodePenitipan" Margin="10"
                          Grid.Row="1" ItemsSource="{Binding}"/>
    </Grid>
</Page>
